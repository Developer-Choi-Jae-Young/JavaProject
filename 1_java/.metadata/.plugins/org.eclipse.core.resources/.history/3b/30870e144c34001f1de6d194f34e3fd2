package kh.study.cjy.control;

import java.util.ArrayList;
import java.util.List;

import kh.study.cjy.model.User;

public class UserControl {
	private List<User> userList = new ArrayList<User>();
	private User u = new User();

	public boolean login(String userId, String userPassword) {
		boolean returnValue = false;
		
		if(u.getUserId().equals(userId) && u.getPassword().equals(userPassword)) {
			returnValue = true;
		}
		
		return returnValue;
	}

	public boolean registUser(String id, String password, int age, String name, String phone, String email, char gender,
			String type) {
		boolean returnValue = false;
		
		u = new User(0, id, password, age, name, phone, email);//, gender, type);
		
		return returnValue;
	}

	public boolean changePassword(String currentPassword, String changePassword) {
		boolean returnValue = false;

		return returnValue;
	}
}
