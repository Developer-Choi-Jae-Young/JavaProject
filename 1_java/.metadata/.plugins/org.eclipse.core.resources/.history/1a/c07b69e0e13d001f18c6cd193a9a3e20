package etc;

import java.io.FileOutputStream;
import java.io.IOException;
import java.util.Properties;

public class FileInputOutput {
	public void FileSave(String fileName, String memo) {
		Properties prop = new Properties();
		prop.put("", prop);
		
		try {
			prop.storeToXML(new FileOutputStream("./resource/" + fileName), memo);			
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public Properties FileOpen(String fileName) {
		Properties prop = new Properties();
		
		try {
			prop.loadFromXML(new FileOutputStream("./resource/" + fileName));			
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		return prop;
	}
}
